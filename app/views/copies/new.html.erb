<div class="min-h-screen bg-gray-100 py-6 px-4 rounded-md flex flex-col justify-center sm:py-12">
  <div class="relative py-3 sm:max-w-xl sm:mx-auto px-4">
    <h1 class="text-5xl font-semibold text-center mb-8 text-gray-800">Create a New Copy</h1>
    
    <%= form_for @copy, html: { class: "bg-white p-6 rounded-md shadow-xl" } do |f| %>
      
      <div class="mb-4">
        <%= f.label :business_name, class: "block text-sm font-medium text-gray-600" %>
        <%= f.text_field :business_name, class: "mt-1 p-2 w-full border rounded-md" %>
      </div>

      <div class="mb-4">
        <%= f.label :industry, class: "block text-sm font-medium text-gray-600" %>
        <%= f.text_field :industry, class: "mt-1 p-2 w-full border rounded-md" %>
      </div>

      <div class="mb-4">
        <%= f.label :target_market, class: "block text-sm font-medium text-gray-600" %>
        <%= f.text_field :target_market, class: "mt-1 p-2 w-full border rounded-md" %>
      </div>

      <div class="mb-4">
        <%= f.label :copy_location, class: "block text-sm font-medium text-gray-600" %>
        <%= f.text_field :copy_location, class: "mt-1 p-2 w-full border rounded-md" %>
      </div>

      <div class="mb-4">
        <%= f.label :copy_purpose, class: "block text-sm font-medium text-gray-600" %>
        <%= f.text_field :copy_purpose, class: "mt-1 p-2 w-full border rounded-md" %>
      </div>

      <div class="mb-4">
        <%= f.label :copy_tone, class: "block text-sm font-medium text-gray-600" %>
        <%= f.text_field :copy_tone, class: "mt-1 p-2 w-full border rounded-md" %>
      </div>

      <div class="mt-6">
        <%= f.submit "Generate Copy", class: "w-full px-4 py-2 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>

    <% end %>
  </div>
</div>