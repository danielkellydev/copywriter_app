<div class="flex items-center justify-center">
  <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md">
    <h1 class="text-6xl font-bold text-center mb-5">Copywriter App</h1>
    <h2 class="text-2xl font-bold text-center mb-5">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-600" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 p-2 w-full border rounded-md" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-medium text-gray-600" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 p-2 w-full border rounded-md" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-sm text-gray-600" %>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.submit "Log in", class: "w-full p-2 text-sm font-bold text-white bg-blue-600 rounded hover:bg-blue-700" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>